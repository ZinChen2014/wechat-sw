package com.desksoft.wechat.controller.user;

import com.desksoft.wechat.common.model.User;
import com.jfinal.core.Controller;
import com.jfinal.validate.Validator;

public class UserValidator extends Validator {

	@Override
	protected void validate(Controller c) {
		validateRequiredString("username", "usernameMsg", "请输入登录名!");
		validateRequiredString("password", "passwordMsg", "请输入密码!");

	}

	@Override
	protected void handleError(Controller c) {
		  controller.keepModel(User.class);
	      controller.render("login.html");
	}

}
