  <script type="text/javascript">
  $(function() {
/* 	  var onlineUserID = $("#onlineUserID").val();
	  if (typeof(onlineUserID) != "undefined") { 
		  window.location.href="${CONTEXT_PATH}/index/" ;
		}    */
	  
	  $("#submit").unbind('click').click(function(){
		  submit();
	  });
	  
	  
  })
  function submit(){
	  if(chklogin()){
    	  var d ={
       			  "username":$.trim($('#username').val()),
       			  "password":$.trim($('#password').val())
       			 }
    	  $.ajax({
           	  dataType : "json",
                 type : 'post',
                 data: {"data":JSON.stringify(d)},
                 url : "${CONTEXT_PATH}/user/login/json",
                 success : function(obj) {
               	  alert(obj.msg);
                     if(true==obj.flag){
                   	  window.location.href="${CONTEXT_PATH}/index/" ;
                     }
                 }
             });  
      }else{
    	  alert("请检查登陆参数")
      } 
  }
  function chklogin(){
	  var flag = true;
	  var nowTime = new Date().getTime();
	    var clickTime =  $("#submit").attr("ctime");
	    if( clickTime != 'undefined' && (nowTime - clickTime < 5000)){
	        alert('操作过于频繁，稍后再试');
	        flag = false;
	     }else{
	    	 $("#submit").attr("ctime",nowTime);
	     }    
	  
	  var name = $.trim($('#username').val());
      var pwd = $.trim($('#password').val());
      if ("" == name || "" == pwd) {
          alert('用户名或者密码不能为空');
          flag = false;
      } 
      return flag;
  }
  </script>
