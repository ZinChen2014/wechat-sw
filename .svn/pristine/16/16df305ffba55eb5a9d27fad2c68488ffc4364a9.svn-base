  <style>
    .header {
      text-align: center;
    }
    .header h1 {
      font-size: 200%;
      color: #333;
      margin-top: 30px;
    }
    .header p {
      font-size: 14px;
    }
  </style>
  <script type="text/javascript">
  $(function() {

	  $("#submit").mousedown(function(){
			login();  
	  }); 
	  
  })
  
  function login(){ //函数 login(); 
	  $('#my-modal-loading').modal();
	  
	  var username = $.trim($('#username').val());//取框中的用户名 
	  var password = $.trim($('#password').val());//取框中的密码 
	  if(chklogin(username,password)){
		  var d ={
      			  "username":username,
      			  "password":password
      		 }
		  $.ajax({ //一个Ajax过程 
			  type: "post", //以post方式与后台沟通 
			  url : "${CONTEXT_PATH}/user/login/json",
			  dataType:'json',//从php返回的值以 JSON方式 解释 
			  data: {"data":JSON.stringify(d)}, 
			  success: function(json){//如果调用php成功 
                  if(true==json.flag){
               	    window.location.href="${CONTEXT_PATH}/index/" ;
                  }else{
                	  $('#my-modal-loading').modal("close");
                	  $('#my-alert').modal();
                  }
			  } 
		  }); 
	  }
	  
  }		  

  function chklogin(name,pwd){
	  var nowTime = new Date().getTime();
	    var clickTime =  $("#submit").attr("ctime");
	    if( clickTime != 'undefined' && (nowTime - clickTime < 5000)){
	    	  $("#result").html('操作过于频繁，稍后再试');
	    	  $('#my-modal-loading').modal("close");
	    	  $('#my-alert').modal();
	       return false;
	     }else{
	    	 $("#submit").attr("ctime",nowTime);
	     }    
	  
      if ("" == name || "" == pwd) {
    	  $("#result").html('用户名或者密码不能为空');
    	  $('#my-modal-loading').modal("close");
    	  $('#my-alert').modal();
          return false;
      } 
      return true;
  }
  </script>
</head>
<body>
<div class="header">
  <div class="am-g">
    <h1>嵊州水务微信公众平台</h1>
   <!--  <p>powered by szsw<br/>designed by desksoft</p> -->
  </div>
  <hr />
</div>
<div class="am-g">
  <div class="am-u-lg-6 am-u-md-8 am-u-sm-centered">
    <h3>登录</h3>
			<hr>
      <form  class="am-form" onsubmit="login()">
      <label for="username">用户名:</label>
      <input type="text" id="username" value="">
      <br>
      <label for="password">密码:</label>
      <input type="password"  id="password" value="">
      <br>
    <!--     <label for="remember-me">
        <input id="remember-me" type="checkbox">
        记住密码
      </label>  -->
      <br />
      <div class="am-cf">
        <input type="submit" id="submit" name="" value="登 录" class="am-btn am-btn-primary am-btn-sm am-fl">
        <#-- <input ctime="" type="submit" onclick="submit()"  name="" value="忘记密码 ^_^? " class="am-btn am-btn-default am-btn-sm am-fr"> -->
      </div>
       </form> 
    <hr>
    <p>© 2007-2015 http://www.gooooo.cn/ Inc.,All rights reserved.</p>
  </div>
</div>

<div class="am-modal am-modal-alert" tabindex="-1" id="my-alert">
  <div class="am-modal-dialog">
    <div class="am-modal-hd">登录提醒:</div>
    <div class="am-modal-bd" id="result">
      登录失败
    </div>
    <div class="am-modal-footer">
      <span class="am-modal-btn">确定</span>
    </div>
  </div>
</div>

<div class="am-modal am-modal-loading am-modal-no-btn" tabindex="-1" id="my-modal-loading">
  <div class="am-modal-dialog">
    <div class="am-modal-hd">登陆中...</div>
    <div class="am-modal-bd">
      <span class="am-icon-spinner am-icon-spin"></span>
    </div>
  </div>
</div>


</body>
</html>